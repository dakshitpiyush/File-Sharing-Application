    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilephotoscroll"
        tools:ignore="MissingConstraints"
        android:scrollbarStyle="outsideInset"
        android:paddingVertical="10dp"
        >
        
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:padding="2dp"

        >

        <RadioButton
            android:id="@+id/profile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile1"
            android:button="@null"
            android:checked="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
            />

        <RadioButton
            android:id="@+id/profile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile2"
            android:button="@null"
            android:checked="true"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
            />

        <RadioButton
            android:id="@+id/profile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile3"
            android:button="@null"
            android:layout_marginEnd="20dp"
            android:padding="2dp"/>

        <RadioButton
            android:id="@+id/profile4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile4"
            android:button="@null"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
            />

        <RadioButton
            android:id="@+id/profile5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile5"
            android:button="@null"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
            />

        <RadioButton
            android:id="@+id/profile6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile6"
            android:button="@null"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
            />

        <RadioButton
            android:id="@+id/profile7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile7"
            android:button="@null"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
            />

        <RadioButton
            android:id="@+id/profile8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile8"
            android:button="@null"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
             />

        <RadioButton
            android:id="@+id/profile9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile9"
            android:button="@null"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
            />
    </RadioGroup>
    </HorizontalScrollView>


    <Button
        android:id="@+id/setprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotoMain"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilephotoscroll" />
</androidx.constraintlayout.widget.ConstraintLayout>